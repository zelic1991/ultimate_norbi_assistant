{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Assistant: Generate (from spec file)",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"${workspaceFolder}\\scripts\\self_work.ps1\" -Spec \"${file}\" -WhatIf",
      "problemMatcher": []
    },
    {
      "label": "Assistant: Approve last draft",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"${workspaceFolder}\\scripts\\self_work.ps1\" -ApproveLast",
      "problemMatcher": []
    },
    {
      "label": "Assistant: Run Smoke Set",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"${workspaceFolder}\\scripts\\run_smoke.ps1\"",
      "problemMatcher": []
    },
    {
      "label": "Assistant: KPI Digest",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"${workspaceFolder}\\scripts\\kpi_digest.ps1\"",
      "problemMatcher": []
    },
    {
      "label": "Assistant: Self-Work Loop",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["${workspaceFolder}\\scripts\\self_work_loop.py"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "API: Dev Server",
      "type": "shell",
      "command": "C:/Users/Norbi/Ultimate_Norbi_Assistant/.venv/Scripts/python.exe",
      "args": ["-m","uvicorn","main:app","--reload","--host","127.0.0.1","--port","8000"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Assistant: Route Smoke",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "$body = '{\"signals\": {\"files\": 1, \"loc\": 40}}'; Invoke-RestMethod -Uri http://127.0.0.1:8000/route -Method Post -ContentType 'application/json' -Body $body | ConvertTo-Json -Depth 5"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Run Smoke Set",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy","Bypass",
        "-File","${workspaceFolder}\\scripts\\run_smoke.ps1"
      ],
      "problemMatcher": []
    }
  ]
}
